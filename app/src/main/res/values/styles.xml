<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.FoodExample.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ShapeAppearance.FoodExample.FAB.ADD" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/fab_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/fab_corner_radius</item>
    </style>

    <style name="ShapeAppearance.FoodExample.FAB.DELETE" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/fab_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/fab_corner_radius</item>
    </style>

    <!-- Plus button on detail page -->
    <dimen name="fab_corner_radius">30dp</dimen>

</resources>